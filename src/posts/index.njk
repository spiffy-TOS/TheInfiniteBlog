---
title: Posts
layout: layout.njk
pagination:
  data: collections.post
  size: 100
---

<h1 class="site-title">{{ title }}</h1>

{% for post in pagination.items %}
  <article class="article">
    <h2 class="article-title">
      <a href="{{ post.url | url }}">
        {{ post.data.title }}
      </a>
    </h2>
    <p>{{ post.data.description or post.templateContent | truncate(160, true, '...') }}</p>
  </article>
{% endfor %}

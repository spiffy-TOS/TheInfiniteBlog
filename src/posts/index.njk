---
title: Posts
layout: layout.njk
pagination:
  data: collections.post
  size: 100
permalink: /posts/index.html
---


<h1 class="site-title">{{ title }}</h1>

<div class="post-preview-list">
  {% for post in pagination.items %}
    <article class="post-preview" data-title="{{ post.data.title }}">
      <h2 class="article-title">{{ post.data.previewTitle or post.data.title }}</h2>
      <p>
        {{ post.data.description or post.templateContent | striptags | truncate(300, true, '...') | safe }}
      </p>
      <button class="read-more-btn" data-post-id="post-{{ loop.index }}">Read More â†’</button>

      <div class="post-modal-content" id="post-{{ loop.index }}" style="display: none;">
        {{ post.templateContent | safe }}
      </div>
    </article>
  {% endfor %}
</div>



---
title: Posts
layout: layout.njk
pagination:
  data: collections.post
  size: 100
---

<h1 class="site-title">{{ title }}</h1>

<div class="post-preview-list">
  {% for post in pagination.items %}
    <a class="data-capsule" href="{{ post.url | url }}">
      <div class="capsule-header">
        <h2 class="capsule-title">{{ post.data.previewTitle or post.data.title }}</h2>
        <p class="capsule-date">{{ post.date.toDateString() }}</p>
      </div>
      <div class="capsule-body">
        <p class="capsule-excerpt">
          {{ post.data.description or post.templateContent | striptags | truncate(600, true, '') | safe }}
        </p>
      </div>
    </a>
  {% endfor %}
</div>



